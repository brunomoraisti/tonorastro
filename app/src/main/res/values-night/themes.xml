<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tonorastro" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_actionbar</item>
        <item name="colorPrimaryVariant">@color/night_fundo</item>
        <item name="colorOnPrimary">@color/night_actionbar</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/branco</item>
        <item name="colorSecondaryVariant">@color/cinza</item>
        <item name="colorOnSecondary">@color/cinza</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:navigationBarColor" tools:targetApi="21">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Tonorastro.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

    <style name="AppTheme.ToolbarPrincipal" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textColorSecondary">@color/branco</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:actionMenuTextColor">@color/branco</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/night_actionbar</item>
        <item name="android:tint">?attr/colorSecondary</item>
    </style>
</resources>